%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, :class => 'control-label col-md-2'
    .col-md-10
      = f.email_field :email, autofocus: true, :class => 'text_field form-control'
  .form-group
    = f.label :password, :class => 'control-label col-md-2'
    .col-md-10
      - if @validatable
        %p.help-block
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", :class => 'text_field form-control'
  .form-group
    = f.label :password_confirmation, :class => 'control-label col-md-2'
    .col-md-10
      = f.password_field :password_confirmation, autocomplete: "off", :class => 'text_field form-control'
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit "Sign up", :class => 'btn btn-primary'
= render "devise/shared/links"
