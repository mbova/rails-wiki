= form_for [@article, @collaboration] do |f|
  - if @collaboration.errors.any?
    #error_explanation
      %h2= "#{pluralize(@collaboration.errors.count, "error")} prohibited this collaboration from being saved:"
      %ul
        - @collaboration.errors.full_messages.each do |msg|
          %li= msg       
  .form-group
    = select_tag :user_id, options_for_select(@users.collect{ |u| [u.name, u.id] }), {class: "form-control"}
  .actions
    = f.submit 'Save', :class => 'btn btn-primary'